### Settings from original zathurarc ###
set sandbox none

### zathura-pywal ###
# Allow recolor
set recolor "true"

# Don't allow original hue when recoloring
set recolor-keephue "false"

# Don't keep original image colors while recoloring
set recolor-reverse-video "false"

# Command line completion entries
set completion-fg "#dedede"
set completion-bg "#0d0d0e"

# Command line completion group elements
set completion-group-fg "#2F7787"
set completion-group-bg "#0d0d0e"

# Current command line completion element
set completion-highlight-fg "#0d0d0e"
set completion-highlight-bg "#dedede"

# Default foreground/background color
set default-bg rgba(13,13,14,1)

# Input bar
set inputbar-fg "#dedede"
set inputbar-bg "#0d0d0e"

# Notification
set notification-fg "#dedede"
set notification-bg "#0d0d0e"

# Error notification
set notification-error-fg "#dedede"
set notification-error-bg "#838461"

# Warning notification
set notification-warning-fg "#dedede"
set notification-warning-bg "#838461"

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg "#dedede"
set statusbar-bg "#0d0d0e"

# Highlighting parts of the document (e.g. show search results)
set highlight-color "#2F7787"
set highlight-active-color "#2F7787"

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor "#dedede"

# "Loading..." text
set render-loading-fg "#dedede"
set render-loading-bg "#0d0d0e"

# Index mode
set index-fg "#dedede"
set index-bg "#0d0d0e"

# Selected element in index mode
set index-active-fg "#0d0d0e"
set index-active-bg "#dedede"
#######################
# Program Keybindings #
#######################

# terminal emulator
super + Return
  st -g 90x24

# program launcher
super + d
  rofi -show drun
super + shift + d
  rofi -show
super + n
  ~/.local/scripts/rofi-notes
super + j
  ~/.local/scripts/rofi-emoji

# Screenshot
super + s
  ~/.local/scripts/scmenu
super + l
  ~/.local/scripts/logout.sh

# Browser
super + b
  brave

# File Manager
super + e
  pcmanfm

# VS Code
super + c
  code

# Redshift
super + r
  redshift -O 4800
super + shift + r
  redshift -x

#####################
# BSPWM Keybindings #
#####################

#----~ Init ~----#

# make sxhkd reload its configuration files:
super + Escape
  pkill -USR1 -x sxhkd

super + shift + c
  picom_toggle

super + shift + m
  pkill -USR1 -x glava || glava --desktop > /dev/null &

super + shift + Escape
  ~/.config/polybar/launch.sh

# quit/restart bspwm
super + alt + {q,r}
  bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
  bspc node -{c,k}

#----~ Workspace Switching ~----#

# Switch Active Workspaces
alt + {Tab, shift + Tab}
  bspc {desktop next.occupied -f, desktop prev.occupied -f}

# focus the last node/desktop
super + {grave,Tab}
  bspc {node,desktop} -f last

#----~ Workspace Management ~----#

# alternate between the tiled and monocle layout
super + m
  bspc desktop -l next
super + f
  bspc node -t \~fullscreen

# swap the current node and the biggest local node
super + g
  bspc node -s biggest.local

# set the window state
# super + {i,shift + i,shift+space}
# 	bspc node -t {tiled,pseudo_tiled,floating}
super + u
  bspc node focused.tiled -t floating || bspc node focused.floating -t tiled
super + i
  bspc node focused.tiled -t pseudo_tiled || bspc node -t tiled

super + {_, shift} + h
  {bspc node --flag hidden=on, bspunhide}

super + shift + r
  bspc node @/ -R 90

# set the node flags
super + ctrl + {m,l,s,p}
  bspc node -g {marked,locked,sticky,private}
#send node to next/previous window
# super + {_, shift} + k
  # bspc node -d {next, prev} -f

#----~ Focus Settings ~----#

# focus the node in the given direction
super + {Left, Down, Up, Right}
  bspc node -f {west,south,north,east}

super + shift + {Left, Down, Up, Right}
  bspwm_move {west,south,north,east}

# focus the node for the given path jump
super + shift + {p,b}
  bspc node -f @{parent,brother}

# focus the next/previous node in the current desktop
super + {_,shift + }n
  bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
  bspc desktop -f {prev,next}.local

# focus or send to the given desktop
super + {_,shift + }{1-9}
  bspc {desktop -f,node -d} '^{1-9}'

#----~ Preselection ~----#

# preselect the direction
super + ctrl + {Left, Down, Up, Right}
  bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
  bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
  bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
  bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#----~ Movement/Resizing ~----#

# Move current window to a pre-selected space
super + p
  bspwm_fill

super + alt + {Left, Down, Up, Right}
  bspwm_resize {west,south,north,east} 25


###################################
########### System Keys ###########
###################################

#Volume Control
XF86AudioLowerVolume
  pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioRaiseVolume
  pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle

#Brightness control
XF86MonBrightnessDown
  brightnessctl set 10%-
XF86MonBrightnessUp
  brightnessctl set +10%

## Personal scripts
super + shift + l
  ~/.local/scripts/lock.sh

## Music Controls
super  + {less, greater, question}
  playerctl {previous, next, play-pause}

## Mic Toggle
super + apostrophe
  micfn --toggle

## Open Applications

## Tdrop, a drop down terminal to act like a scratchpad. Check scripts
super + o; {w, p, r}
  {firefox, pavucontrol, ~/.local/scripts/tdrop_c -n 3 -p 'bspc rule -a St -o state=floating' st -e ranger}

## Dropdown
super + alt + m
  ~/.local/scripts/tdrop_c2 -n 2 -p 'bspc rule -a St -o state=floating' st -e zsh -c '~/.ncmpcpp/ncmpcpp-ueberzug/ncmpcpp-ueberzug'
  
# Remove current tab from tabbed
super + t; r
  tabc.sh $(bspc query -N -n focused) remove

# At given direction: join two windows into a new tabbed or add window to an existing tabbed
super + t; {Left,Down,Up,Right}
  tabc.sh $(bspc query -N -n {west,south,north,east}) add $(bspc query -N -n focused)

super + semicolon
  ~/.local/scripts/bspwm/bspc_marked_hidden
